<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.v5.mapper.UserMapper" >
<insert id ="insert" parameterType="com.v5.entity.User" >
  insert into user(user_name,password,salt,email) values(#{userName},#{password},#{salt},#{email});
</insert>

<select id="getById" resultType="com.v5.entity.User">
  select * from user where id=#{id}
</select>

<select id="listByMobile" resultType="com.v5.entity.User">
  select * from user where mobile = #{mobile}
</select>
</mapper>